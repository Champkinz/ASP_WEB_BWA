@model ASP_WEB_BWA.Models.Log

@{
    ViewBag.Title = "Login";
    if (!Request.QueryString["lang"].IsEmpty())
    {
        Culture = UICulture = Request.QueryString["lang"];
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <a href="@Url.Action("Change","loginusers",new { lang = "jp" })">Japanese</a>
    <a href="@Url.Action("Change","loginusers",new { lang = "en" })">English</a>
    <h1>@Resources.Content.Login</h1>
    <div class="container">
        <div class="row">
            <div style="border-radius:20px; padding-left:4%;padding-top:8%;padding-bottom:8%; margin-top:7%;background-color:#ecf0f1;" class="col-md-5 col-md-offset-3">
                @using (Html.BeginForm())
                {
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">@Resources.Content.Username</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">@Resources.Content.Password</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-10 col-md-offset-2" style="color:red;margin-bottom:2%;">
                            @ViewBag.LoginErrorMessage
                        </div>
                        <div class="form-group">
                                <div class="col-md-8 col-md-offset-2">
                                    <input type="submit" value="@Resources.Content.Login" class="btn btn-primary btn-block" />
                                </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
   

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
